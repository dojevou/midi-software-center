{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "MIDI Software Center",
  "version": "1.0.0",
  "identifier": "com.midisoftwarecenter.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MIDI Software Center",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "decorations": true,
        "alwaysOnTop": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2025 MIDI Software Center",
    "category": "Music",
    "shortDescription": "Professional MIDI library management",
    "longDescription": "MIDI Software Center is a professional-grade MIDI library management system for importing, analyzing, organizing, and browsing large MIDI file collections. Features BPM detection, key signature analysis, drum pattern recognition, and intelligent auto-tagging.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": [
          "libasound2t64",
          "libgtk-3-0t64",
          "libwebkit2gtk-4.1-0",
          "libglib2.0-0t64"
        ],
        "recommends": [
          "postgresql-client",
          "alsa-utils"
        ],
        "files": {},
        "section": "sound",
        "priority": "optional",
        "desktopTemplate": "desktop/midi-software-center.desktop"
      },
      "rpm": {
        "depends": [
          "alsa-lib",
          "gtk3",
          "webkit2gtk4.1",
          "glib2"
        ]
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": null,
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    }
  }
}