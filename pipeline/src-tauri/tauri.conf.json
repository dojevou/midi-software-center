{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MIDI Software Center",
  "version": "1.0.0",
  "identifier": "com.midilibrary.software-center",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Professional MIDI library management",
    "longDescription": "High-performance MIDI file management, import, analysis, and organization"
  },
  "app": {
    "windows": [
      {
        "title": "MIDI Software Center",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
